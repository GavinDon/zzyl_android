<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.nanyixuan.zzyl_andorid.view.activity.PayActivity">

    <include
        android:id="@+id/pay_include"
        layout="@layout/app_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="您此次需要支付的费用为:"
            android:textColor="@color/blue_300"
            android:textSize="16sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="16dp"
                android:src="@mipmap/money"
                />

            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:padding="8dp"
                android:text="12.00"
                android:textColor="@color/blue_500"
                android:textSize="36sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="4dp"
                android:text="元整"
                android:textColor="@color/blue_500"
                android:textSize="12sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pay_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:text="西安市未央区风城一路世纪金花地下停车场 "
            android:textColor="@color/grey_600"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_wechat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:text="微信支付"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="12dp"
            android:text="支付宝"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_other"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="42dp"
            android:text="其他支付"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/white"
            />
    </LinearLayout>


</LinearLayout>
